---
import { getCollection } from "astro:content";

export async function listAllContributors() {
  const allChannels = await getCollection("channels");
  const allContributors = allChannels.flatMap((channel) =>
    Object.values(channel.data.schedule).flatMap(
      (day) =>
        day?.flatMap((slot) => {
          const timeSlot = Object.values(slot)[0];
          if (!timeSlot?.author) return [];
          return Array.isArray(timeSlot.author)
            ? timeSlot.author
            : [timeSlot.author];
        }) ?? [],
    ),
  );

  // Remove duplicates and sort
  return [...new Set(allContributors)].sort();
}

const contributors = await listAllContributors();
---

<section>
  <h2>Featuring</h2>
  <div class="featuring">
    {contributors.map((contributor) => <span>{contributor}</span>)}
    <a
      href="https://github.com/evadecker/hypertext.tv"
      target="_blank"
      rel="noopener noreferrer">&hellip;and you?</a
    >
  </div>
</section>

<style>
  .featuring {
    text-align: center;
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(16ch, 1fr));
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    line-height: 1;
    text-wrap: nowrap;
  }
</style>
